open class ${Converter}(val tf: TypeFactory) : ${SMTConverter}() {

    private fun addTypeAxioms(term: Term, expr: Dynamic_, ef: ExprFactory_, ctx: Context_) = when (term.type) {
        is KexPointer -> expr
                .withAxiom(expr ge ef.makeIntConst(0))
        is KexByte -> expr
                .withAxiom(expr ge ef.makeIntConst(Byte.MIN_VALUE.toInt()))
                .withAxiom(expr le ef.makeIntConst(Byte.MAX_VALUE.toInt()))
        is KexChar -> expr
                .withAxiom(expr ge ef.makeIntConst(Char.MIN_VALUE.toInt()))
                .withAxiom(expr le ef.makeIntConst(Char.MAX_VALUE.toInt()))
        is KexShort -> expr
                .withAxiom(expr ge ef.makeIntConst(Short.MIN_VALUE.toInt()))
                .withAxiom(expr le ef.makeIntConst(Short.MAX_VALUE.toInt()))
        else -> expr
    }

    private fun cast(type: KexType, expr: Dynamic_): Dynamic_ = when (type) {
        is KexLong -> Long_.forceCast(expr)
        is KexBool -> Bool_.forceCast(expr)
        is KexIntegral -> Int_.forceCast(expr)
        is KexFloat -> Float_.forceCast(expr)
        is KexDouble -> Double_.forceCast(expr)
        is KexClass -> Ptr_.forceCast(expr)
        is KexArray -> Ptr_.forceCast(expr)
        else -> unreachable { log.error("Unable to cast expr ${ expr } to ${ type }") }
    }

    fun convertWithMemoryReset(ps: PredicateState, ef: ExprFactory_, ctx: Context_): Bool_ {
        ctx.resetMemory()
        return convert(ps, ef, ctx)
    }

    fun convert(ps: PredicateState, ef: ExprFactory_, ctx: Context_, extractPath: Boolean = false): Bool_ = when (ps) {
#set($states = ["Basic", "Chain", "Choice", "Negation", "CallApproximation"])
#foreach($state in $states)
        is ${state}State -> convert(ps, ef, ctx, extractPath)
#end
        else -> unreachable { log.error("Unknown PS type: ${ ps }") }
    }

    open fun convert(callApproximation: CallApproximationState, ef: ExprFactory_, ctx: Context_, extractPath: Boolean = false): Bool_ {
        throw IllegalStateException("CallApproximationState must be overridden")
    }

    fun convert(basic: BasicState, ef: ExprFactory_, ctx: Context_, extractPath: Boolean = false): Bool_ =
        basic.predicates.fold(ef.makeTrue()) { acc, predicate -> acc and convert(predicate, ef, ctx) }

    fun convert(chain: ChainState, ef: ExprFactory_, ctx: Context_, extractPath: Boolean = false): Bool_ =
        convert(chain.base, ef, ctx) and convert(chain.curr, ef, ctx)

    fun convert(choice: ChoiceState, ef: ExprFactory_, ctx: Context_, extractPath: Boolean = false): Bool_ {
        var res = ef.makeFalse()
        val contexts = hashMapOf< Bool_, Context_ >()
        for (branch in choice) {
            val newCtx = ctx.splitMemory()
            val state = convert(branch, ef, newCtx, extractPath)

            res = res or state
            if (!extractPath) {
                val path = branch.filterByType(PredicateType.Path())
                contexts[convert(path, ef, newCtx, true)] = newCtx
            }
        }
        ctx.mergeMemory("choice", contexts)
        return res
    }

    fun convert(negation: NegationState, ef: ExprFactory_, ctx: Context_, extractPath: Boolean = false): Bool_ =
        convert(negation.predicateState, ef, ctx).not()

#set($predicates = ["ArrayStore", "Call", "Catch", "DefaultSwitch", "Inequality", "Equality", "FieldStore", "NewArray", "New", "Throw", "Constant", "Cast"])
    fun convert(predicate: Predicate, ef: ExprFactory_, ctx: Context_): Bool_ = when (predicate) {
#foreach($predicate in $predicates)
        is ${predicate}Predicate -> convert(predicate, ef, ctx)
#end
        else -> unreachable { log.error("Unknown predicate type: ${ predicate }") }
    }

    fun convert(store: ArrayStorePredicate, ef: ExprFactory_, ctx: Context_): Bool_ {
        val ptr = convert(store.arrayRef, ef, ctx) as? Ptr_ ?: unreachable { log.error("Non-ptr ref term in `store`") }
        val value = convert(store.value, ef, ctx)
        ctx.writeMemory(ptr, value, store, ExprFactory_.getType(store.componentType))
        return ef.makeTrue().withAxiom(ptr.axiomExpr()).withAxiom(value.axiomExpr())
    }

    open fun convert(call: CallPredicate, ef: ExprFactory_, ctx: Context_): Bool_ =
                throw IllegalStateException("CallPredicate must be overridden")

    fun convert(catch: CatchPredicate, ef: ExprFactory_, ctx: Context_): Bool_ = ef.makeTrue()
    fun convert(`throw`: ThrowPredicate, ef: ExprFactory_, ctx: Context_): Bool_ = ef.makeTrue()
    fun convert(constant: ConstantPredicate, ef: ExprFactory_, ctx: Context_): Bool_ = when {
        constant.value -> ef.makeTrue()
        else -> ef.makeFalse()
    }

    fun convert(defaultswitch: DefaultSwitchPredicate, ef: ExprFactory_, ctx: Context_): Bool_ {
        var res = ef.makeTrue()
        val cond = convert(defaultswitch.cond, ef, ctx) as? Int_
                        ?: unreachable { log.error("Non-integer term in switch") }
        for (case in defaultswitch.cases) {
            val case_ = convert(case, ef, ctx) as? Int_ ?: unreachable { log.error("Non-integer term in switch") }
            res = res and (cond neq case_).toBool()
        }
        return res
    }

    fun convert(equality: InequalityPredicate, ef: ExprFactory_, ctx: Context_): Bool_ {
        val lhv = convert(equality.lhv, ef, ctx)
        val rhv = convert(equality.rhv, ef, ctx)
        return lhv neq rhv
    }

    fun convert(equality: EqualityPredicate, ef: ExprFactory_, ctx: Context_): Bool_ {
        val lhv = convert(equality.lhv, ef, ctx)
        val rhv = convert(equality.rhv, ef, ctx)
        return lhv eq rhv
    }

   fun convert(store: FieldStorePredicate, ef: ExprFactory_, ctx: Context_): Bool_ {
        val value = convert(store.value, ef, ctx)
        val ptr = convert(store.field, ef, ctx) as? Ptr_ ?: unreachable { log.error("Non-ptr ref in field load") }
        ctx.writeMemory(ptr, value, store, ExprFactory_.getType(store.value.type))
        return ef.makeTrue().withAxiom(ptr.axiomExpr()).withAxiom(value.axiomExpr())
    }

    fun convert(newarray: NewArrayPredicate, ef: ExprFactory_, ctx: Context_): Bool_ {
        val lhv = convert(newarray.lhv, ef, ctx) as? Ptr_ ?: unreachable { log.error("Non-ptr term in `new`") }
        val ptr = ctx.getLocalPtr(newarray.identifier, newarray.identifier.size({ ExprFactory_.getTypeSize(it).int }, defaultAllocSize))
        val length = newarray.dimentions.fold(1) { acc: Int, term: Term ->
            acc * ((term as? ConstIntTerm)?.value ?: defaultAllocSize)
        }
        ctx.writeMemory(ptr, ef.makeIntConst(length), newarray,  Int_::class)
        return lhv eq ptr
    }

    fun convert(new: NewPredicate, ef: ExprFactory_, ctx: Context_): Bool_ {
        val lhv = convert(new.lhv, ef, ctx) as? Ptr_ ?: unreachable { log.error("Non-ptr term in `new`") }
        val size = new.identifier.size({ ExprFactory_.getTypeSize(it).int }, defaultAllocSize)
        return lhv eq ctx.getLocalPtr(new.identifier, size)
    }

    fun convert(castPredicate: CastPredicate, ef: ExprFactory_, ctx: Context_): Bool_ {
        val lhv = convert(castPredicate.lhv, ef, ctx) as? Ptr_ ?: unreachable { log.error("Non-ptr term as cast operand") }
        val operand = convert(castPredicate.operand, ef, ctx)
        val typeIndex = ctx.getTypeIdx(castPredicate.operandType)
        ctx.writeMemory(lhv, ef.makeIntConst(typeIndex), castPredicate, Int_::class)
        return lhv eq cast(castPredicate.operandType, operand)
    }

#set($terms = ["Argument", "ArrayIndex", "ArrayLength", "ArrayLoad", "Binary", "Call", "PrimitiveCast", "Cmp",
    "ConstBool", "ConstByte", "ConstChar", "ConstClass", "ConstDouble", "ConstFloat", "ConstInt", "ConstLong",
    "ConstShort", "ConstString", "FieldLoad", "Field", "InstanceOf", "Neg", "Null", "ReturnValue", "Value", "Undef", "LocalObject", "If"])
    fun convert(term: Term, ef: ExprFactory_, ctx: Context_): Dynamic_ = when (term) {
#foreach($term in $terms)
        is ${term}Term -> convert(term, ef, ctx)
#end
        else -> unreachable { log.error("Unknown term type: ${ term }") }
    }

    fun convert(argument: ArgumentTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ {
        val expr = ef.getVarByTypeAndName(argument.type, argument.name)
        val result =  addTypeAxioms(argument, expr, ef, ctx)
        if (argument.type !is KexPointer) return result
        return result.withAxiom(expr lt ef.makeIntConst(Context_.BASE_LOCAL_PTR - 1))
    }

    fun convert(arrayindex: ArrayIndexTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ {
        val arrayref = convert(arrayindex.arrayRef, ef, ctx) as? Ptr_ ?: unreachable { log.error("Non-ptr operand of array load") }
        val index = (convert(arrayindex.index, ef, ctx) as? Int_ ?: unreachable { log.error("Non-integer index of array load") }) *
            ExprFactory_.getTypeSize(arrayindex.type).int
        val valuePtr = Ptr_.forceCast(arrayref + index)
        return addTypeAxioms(arrayindex, valuePtr, ef, ctx)
    }

     fun convert(arraylength: ArrayLengthTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ {
        val ptr = convert(arraylength.arrayRef, ef, ctx) as? Ptr_
                ?: unreachable { log.error("Non-ptr term in `arraylength`") }
        return ctx.readMemory< Int_ >(ptr, arraylength, Int_::class).withAxiom(ptr.axiomExpr())
    }

    fun convert(arrayload: ArrayLoadTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ {
        val arrayref = convert(arrayload.arrayRef, ef, ctx) as? Ptr_
                ?: unreachable { log.error("Non-ptr operand of array load") }
        val ret = ctx.readMemory< Dynamic_ >(arrayref, arrayload, ExprFactory_.getType(arrayload.type))
        return cast(arrayload.type, ret).withAxiom(arrayref.axiomExpr())
    }

    fun convert(binary: BinaryTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ {
        val lhv = convert(binary.lhv, ef, ctx)
        val rhv = convert(binary.rhv, ef, ctx)
        return when (binary.opcode) {
            is BinaryOpcode.Add -> lhv + rhv
            is BinaryOpcode.Sub -> lhv - rhv
            is BinaryOpcode.Mul -> lhv * rhv
            is BinaryOpcode.Div -> lhv / rhv
            is BinaryOpcode.Rem -> lhv % rhv
            is BinaryOpcode.Shl -> lhv shl rhv
            is BinaryOpcode.Shr -> lhv ashr rhv
            is BinaryOpcode.Ushr -> lhv shr rhv
            is BinaryOpcode.And -> lhv and rhv
            is BinaryOpcode.Or -> lhv or rhv
            is BinaryOpcode.Xor -> lhv xor rhv
        }
    }

    fun convert(call: CallTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ =
        ef.getVarByTypeAndName(call.type, call.name)

    fun convert(cast: PrimitiveCastTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ {
        val op = convert(cast.operand, ef, ctx)
        return cast(cast.type, op)
    }

#macro(cmp $opcode $default $type)
    #* @vtlvariable name="type" type="java.lang.String" *#
    #* @vtlvariable name="opcode" type="java.lang.String" *#
            is CmpOpcode.$opcode -> {
                val cases = mapOf(
                    (lhv gt rhv) to ef.makeIntConst(1),
                    (lhv eq rhv) to ef.makeIntConst(0),
                    (lhv lt rhv) to ef.makeIntConst(-1)
                )
                ef.switch(cases, ef.makeIntConst($default))
            }
#end
    fun convert(cmp: CmpTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ {
        val lhv = convert(cmp.lhv, ef, ctx)
        val rhv = convert(cmp.rhv,ef, ctx)
#set($opcodes = ["Eq", "Neq", "Lt", "Gt", "Le", "Ge"])
        return when (cmp.opcode) {
#foreach($opcode in $opcodes)
            is CmpOpcode.$opcode -> lhv ${opcode.toLowerCase()} rhv
#end
#cmp("Cmp", 1, "Long_")
#cmp("Cmpg", 1, "Float_")
#cmp("Cmpl", -1, "Double_")
        }
    }

    fun convert(const: ConstBoolTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ = ef.makeBoolConst(const.value)
    fun convert(const: ConstByteTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ = ef.makeIntConst(const.value.toInt())
    fun convert(const: ConstCharTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ = ef.makeIntConst(const.value.toInt())

    fun convert(const: ConstClassTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ =
        ef.getVarByTypeAndName(const.type, const.name)

    fun convert(const: ConstDoubleTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ = ef.makeDoubleConst(const.value)
    fun convert(const: ConstFloatTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ = ef.makeFloatConst(const.value)
    fun convert(const: ConstIntTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ = ef.makeIntConst(const.value)
    fun convert(const: ConstLongTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ = ef.makeLongConst(const.value)
    fun convert(const: ConstShortTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ = ef.makeIntConst(const.value.toInt())

    fun convert(const: ConstStringTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ {
##        val memspace = const.memspace
