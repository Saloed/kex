##        val actualSize = length * ExprFactory_.getTypeSize(KexInt)
##        val res = ctx.getLocalPtr(memspace, actualSize)
##        ctx.writeBound(res, ef.makeIntConst(actualSize), memspace)
##        return res
        val expr = ef.getVarByTypeAndName(const.type, const.name)
        return addTypeAxioms(const, expr, ef, ctx)
    }

     fun convert(fieldload: FieldLoadTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ {
        val ptr = convert(fieldload.field, ef, ctx) as? Ptr_ ?: unreachable { log.error("Non-ptr ref in field load") }
        val res = ctx.readMemory< Dynamic_ >(ptr, fieldload, ExprFactory_.getType(fieldload.type))
        return cast(fieldload.type, res).withAxiom(ptr.axiomExpr())
    }

    fun convert(field: FieldTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ =
            convert(field.owner, ef, ctx)

    fun convert(instanceof: InstanceOfTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ = when {
        instanceof.operand.type is KexIntegral -> ef.makeBoolConst(instanceof.operand.type == instanceof.checkedType)
        instanceof.operand.type is KexReal -> ef.makeBoolConst(instanceof.operand.type == instanceof.checkedType)
        else -> {
            val arg = convert(instanceof.operand, ef, ctx) as? Ptr_
                    ?: unreachable { log.error("Non-ptr ref in instance of") }
            val argType = ctx.readMemory< Int_ >(arg, instanceof, Int_::class)
            val typeIndex = ctx.getTypeIdx(instanceof.checkedType)
            argType eq ef.makeIntConst(typeIndex).withAxiom(arg.axiomExpr())
        }
    }

    fun convert(neg: NegTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ {
        val operand = convert(neg.operand, ef, ctx)
        return when (operand) {
            is Bool_ -> Bool_.forceCast(!operand)
            is Int_ -> Int_.forceCast(!operand)
            is Long_ -> Long_.forceCast(!operand)
            is Float_ -> Float_.forceCast(!operand)
            is Double_ -> Double_.forceCast(!operand)
            else -> unreachable { log.error("Invalid operand of `neg`: ${ neg.operand }") }
        }
    }

    fun convert(`null`: NullTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ = ef.makeNull()

    fun convert(`return`: ReturnValueTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ {
        val expr = ef.getVarByTypeAndName(`return`.type, `return`.name)
        return addTypeAxioms(`return`, expr, ef, ctx)
    }

    fun convert(value: ValueTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ {
        val expr = ef.getVarByTypeAndName(value.type, value.name)
        return addTypeAxioms(value, expr, ef, ctx)
    }

    fun convert(undef: UndefTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ {
        val expr = ef.getVarByTypeAndName(undef.type, undef.name, true)
        return addTypeAxioms(undef, expr, ef, ctx)
    }

    fun convert(localObjectTerm: LocalObjectTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ {
        val size = localObjectTerm.identifier.size({ ExprFactory_.getTypeSize(it).int }, defaultAllocSize)
        return ctx.getLocalPtr(localObjectTerm.identifier, size)
    }

    fun convert(ifTerm: IfTerm, ef: ExprFactory_, ctx: Context_): Dynamic_ {
        val cond = Dynamic_.forceCast< Bool_ >(convert(ifTerm.condition, ef, ctx))
        val trueBranch = convert(ifTerm.trueBranch, ef, ctx)
        val falseBranch = convert(ifTerm.falseBranch, ef, ctx)
        val expr = Engine_.ite(ef.ctx, cond.expr, trueBranch.expr, falseBranch.expr)
        val axiom = spliceAxioms(ef.ctx, cond.axiom, trueBranch.axiom, falseBranch.axiom)
        val result =  Dynamic_(ef.ctx, expr, axiom)
        return Dynamic_.forceCast(result, ExprFactory_.getType(ifTerm.type))
    }
}
